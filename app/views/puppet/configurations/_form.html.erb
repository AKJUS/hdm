<%= form_with(model: configurable, url: url, local: true) do |form| %>
  <% if configurable.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h5><%= pluralize(configurable.errors.count, "error") %> prohibited this configuration from being saved:</h5>
      <ul>
      <% configurable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for :configurations, configurable.configurations.new do |field| %>
    <div class="form-group">
      <%= field.label :name %>
      <%= field.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= field.select :kind, options_for_select(%w(string integer float)), { allow_blank: false }, class: "form-control" %>
      <%= field.label :kind do %>
        <small>What type of content should this config step have?</small>
      <% end %>
    </div>

    <div class="form-group">
      <div class="form-check">
        <%= field.check_box :multiple_values, class: "form-check-input" %>
        <%= field.label :multiple_values, class: "form-check-label" %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Save", class:"btn btn-success min-width-btn" %>
  </div>
<% end %>
