<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <h1>Nodes</h1>
    </div>
    <div class="col text-right">
      <%= link_to 'Environments', puppet_environments_path, class: "btn btn-light" %>

      <% if can? :create, Puppet::Node.new %>
        <%= link_to 'New Node', new_puppet_environment_node_path(@environment), class:"btn btn-light" %>
      <% end %>
    </div>
  </div>

  <%= render partial: "table", locals: { nodes: @nodes } %>
</div>
