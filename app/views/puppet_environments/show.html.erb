<div class="container">
  <div class="row">
    <div class="col-md">
      <h1>Show Environment</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md">
      <strong>Name: </strong> <%= @puppet_environment.name %>
    </div>
    <div class="col-md">
      <% if can? :edit, @puppet_environment %>
        <%= link_to 'Edit', edit_puppet_environment_path(@puppet_environment), class:"btn btn-primary min-width-btn" %> 
      <% end %>
      <%= link_to 'Back', puppet_environments_path, class: "btn btn-light min-width-btn" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md">
      <h3>Nodes</h3>
      <%= render partial: "puppet_nodes/table", locals: {puppet_nodes: @puppet_environment.puppet_nodes.accessible_by(current_ability), no_environments: true } %>
    </div>
    <div class="col-md">
      <h3>Common config</h3>
      <%= render partial: "shared/display_config", locals: {config: @puppet_environment.common_config} %>
    </div>
  </div>
</div>
